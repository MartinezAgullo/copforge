# =============================================================================
# CopForge Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# =============================================================================
# LLM PROVIDERS
# =============================================================================
# At least one provider is required for LLM-based entity extraction

# OpenAI
OPENAI_API_KEY=sk-proj-your-key-here

# Anthropic
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# DeepSeek
DEEPSEEK_API_KEY=sk-your-key-here

# Google (Gemini)
GOOGLE_API_KEY=your-key-here

# Groq
GROQ_API_KEY=gsk_your-key-here

# Default provider (openai, anthropic, deepseek, google, groq)
LLM_DEFAULT_PROVIDER=openai

# =============================================================================
# LANGSMITH (LLM Tracing)
# =============================================================================
# Optional: For tracing LLM calls, prompts, and token usage
# Get your API key at: https://smith.langchain.com

TELEMETRY_LANGSMITH_ENABLED=false
LANGCHAIN_API_KEY=lsv2_pt_your-key-here
LANGCHAIN_PROJECT=copforge
# Use EU endpoint if needed:
# LANGSMITH_ENDPOINT=https://eu.api.smith.langchain.com

# =============================================================================
# OPENTELEMETRY (Infrastructure Tracing)
# =============================================================================
# Optional: For tracing HTTP calls, MCP tools, database queries
# Requires a collector (Jaeger, Grafana Tempo, OpenObserve, etc.)

TELEMETRY_OTEL_ENABLED=false
TELEMETRY_OTEL_SERVICE_NAME=copforge
TELEMETRY_OTEL_EXPORTER_TYPE=console
# Options: otlp, console, none

# OTLP Exporter (when TELEMETRY_OTEL_EXPORTER_TYPE=otlp)
TELEMETRY_OTEL_EXPORTER_ENDPOINT=http://localhost:4317

# For OpenObserve or authenticated endpoints:
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:5080/api/default
# OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
# OTEL_EXPORTER_OTLP_HEADERS="Authorization=Basic your-base64-credentials"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# mapa-puntos-interes (COP persistence and visualization)
MAPA_BASE_URL=http://localhost:3000

# HuggingFace (for Pyannote speaker diarization in multimodal server)
HF_TOKEN=hf_your-token-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
APP_ENV=development

# Debug mode
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# MCP SERVERS (usually no need to change)
# =============================================================================

# MCP_COP_FUSION_HOST=127.0.0.1
# MCP_COP_FUSION_PORT=8011
# MCP_FIREWALL_HOST=127.0.0.1
# MCP_FIREWALL_PORT=8010

# =============================================================================
# A2A PROTOCOL (future use)
# =============================================================================

